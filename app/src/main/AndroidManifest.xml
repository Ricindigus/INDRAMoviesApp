<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.com.dmorales.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.MoviesApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_movie"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesApp">
        <activity android:name=".movies.features.view.main.MainActivity">

        </activity>
        <activity android:name=".login.features.view.LoginActivity">

        </activity>
        <activity android:name=".splash.features.view.SplashActivity"
            android:theme="@style/Theme.MoviesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>